{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "**/__mocks__"
  ],
    "include": [
        "src/**/*.ts"
    ],
}
