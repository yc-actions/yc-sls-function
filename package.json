{
  "name": "yc-actions-yc-sls-function",
  "version": "2.11.0",
  "description": "GitHub Action to deploy Serverless Function to Yandex Cloud.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_WORKSPACE=__tests__ jest --verbose",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-sls-function.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "serverless",
    "deploy"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@grpc/grpc-js": "^1.10.1",
    "@yandex-cloud/nodejs-sdk": "2.7.4",
    "archiver": "^7.0.1",
    "axios": "^1.6.8",
    "glob": "^10.3.15",
    "long": "4.0.0",
    "minimatch": "9.0.4",
    "minimist": ">=1.2.8",
    "path-scurry": "^1.10.2",
    "stream-buffers": "^3.0.2"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/jest": "^29.5.12",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.12.9",
    "@types/stream-buffers": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.5.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
