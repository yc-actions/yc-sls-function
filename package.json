{
  "name": "yc-actions-yc-sls-function",
  "version": "2.12.0",
  "description": "GitHub Action to deploy Serverless Function to Yandex Cloud.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_WORKSPACE=__tests__ jest --verbose",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-sls-function.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "serverless",
    "deploy"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@grpc/grpc-js": "^1.12.2",
    "@yandex-cloud/nodejs-sdk": "2.7.7",
    "archiver": "^7.0.1",
    "axios": "^1.7.7",
    "glob": "^11.0.0",
    "long": "5.2.3",
    "minimatch": "10.0.1",
    "minimist": ">=1.2.8",
    "path-scurry": "^2.0.0",
    "stream-buffers": "^3.0.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@types/archiver": "^6.0.3",
    "@types/jest": "^29.5.14",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.9.0",
    "@types/stream-buffers": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vercel/ncc": "^0.38.2",
    "dotenv": "^16.4.5",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jsonc": "^2.18.1",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
